<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="woowacourse.shopping.presentation.ui.productDetail.presenter.ProductDetailPresenter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.productDetail.ProductDetailActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDetailToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/woowa_dealer_blue_400"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/buttonProductDetailClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/icon_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageProductDetailProduct"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:glideSrc="@{presenter.selectedProduct.itemImage}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutDetailToolbar"
            tools:src="@drawable/ic_launcher_foreground" />


        <TextView
            android:id="@+id/textProductDetailTitle"
            style="@style/woowaPro24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:text="@{presenter.selectedProduct.name}"
            android:textColor="@color/woowa_dealer_black_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageProductDetailProduct"
            tools:text="람보르기니 우루스 S" />

        <TextView
            android:id="@+id/textProductDetailPrice"
            style="@style/woowaAir20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/price"
            android:textColor="@color/woowa_dealer_black_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineProductDetailDivider" />

        <TextView
            android:id="@+id/textProductDetailAmount"
            style="@style/woowaAir20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:text="@{String.format(@string/detailPriceFormat, presenter.selectedProduct.price)}"
            android:textColor="@color/woowa_dealer_black_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textProductDetailPrice"
            tools:text="20,000원" />

        <View
            android:id="@+id/lineProductDetailDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/woowa_dealer_gray_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textProductDetailTitle" />

        <TextView
            android:id="@+id/buttonProductDetailPutInShoppingCart"
            style="@style/woowaPro24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/woowa_dealer_blue_600"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="@string/putInShoppingCart"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>